<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.view.viewgui.controllers.CreaAnnuncioViewController"
            prefWidth="900.0" prefHeight="600.0"
            style="-fx-background-color: #f4f7fb;">

    <children>
        <!-- Card centrale -->
        <VBox alignment="TOP_CENTER" layoutX="200.0" layoutY="50.0" prefWidth="500.0" spacing="15.0"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12;
                     -fx-border-color: #c6d9f1; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 3);
                     -fx-padding: 25;">
            <children>

                <!-- Titolo schermata -->
                <Label text="Crea Nuovo Annuncio" style="-fx-text-fill: #2b5797;">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                </Label>

                <!-- Campo Titolo -->
                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Titolo:" style="-fx-font-weight: bold;" />
                        <TextField fx:id="titoloField" promptText="Inserisci il titolo dell'annuncio"
                                   style="-fx-background-radius: 8; -fx-background-color: #f9f9f9;"/>
                    </children>
                </VBox>

                <!-- Campo Indirizzo -->
                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Indirizzo:" style="-fx-font-weight: bold;" />
                        <TextField fx:id="indirizzoField" promptText="Inserisci l'indirizzo"
                                   style="-fx-background-radius: 8; -fx-background-color: #f9f9f9;"/>
                    </children>
                </VBox>

                <!-- Campo Descrizione -->
                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Descrizione:" style="-fx-font-weight: bold;" />
                        <TextArea fx:id="descrizioneArea" promptText="Descrivi il tuo annuncio" prefRowCount="4"
                                  wrapText="true"
                                  style="-fx-background-radius: 8; -fx-background-color: #f9f9f9;"/>
                    </children>
                </VBox>

                <!-- Campo Servizi -->
                <VBox spacing="5.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Servizi:" style="-fx-font-weight: bold;" />
                        <TextField fx:id="serviziField" promptText="Wi-Fi, Parcheggio, Piscina..."
                                   style="-fx-background-radius: 8; -fx-background-color: #f9f9f9;"/>
                    </children>
                </VBox>

                <!-- Numero ospiti e Prezzo per notte sulla stessa riga -->
                <HBox spacing="20.0" alignment="CENTER_LEFT">
                    <children>
                        <!-- Campo Numero ospiti -->
                        <VBox spacing="5.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="Massimo numero ospiti:" style="-fx-font-weight: bold;" />
                                <Spinner fx:id="ospitiSpinner" prefWidth="100.0" />
                            </children>
                        </VBox>

                        <!-- Campo Prezzo per notte -->
                        <VBox spacing="5.0" alignment="CENTER_LEFT">
                            <children>
                                <Label text="Prezzo per notte (â‚¬):" style="-fx-font-weight: bold;" />
                                <TextField fx:id="prezzoField" promptText="Es. 120.00"
                                           style="-fx-background-radius: 8; -fx-background-color: #f9f9f9;"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Pulsanti Azione -->
                <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 15 0 0 0;">
                    <children>
                        <Button fx:id="annullaButton" text="Annulla"
                                onAction="#handleAnnulla"
                                style="-fx-background-color: #cce6ff; -fx-text-fill: #2b5797;
                                       -fx-font-weight: bold; -fx-background-radius: 8;
                                       -fx-pref-width: 120; -fx-pref-height: 35;"/>
                        <Button fx:id="creaButton" text="Crea"
                                onAction="#handleCrea"
                                style="-fx-background-color: #4da6ff; -fx-text-fill: white;
                                       -fx-font-weight: bold; -fx-background-radius: 8;
                                       -fx-pref-width: 120; -fx-pref-height: 35;"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
