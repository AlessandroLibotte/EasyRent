<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #f4f7fb;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.view.viewgui.controllers.AnnuncioViewController">

    <children>
        <!-- Card centrale -->
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="20.0"
              prefWidth="800.0" prefHeight="560.0" spacing="15.0"
              style="-fx-background-color: white; -fx-background-radius: 12;
                     -fx-border-radius: 12; -fx-border-color: #c6d9f1;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 3);
                     -fx-padding: 20;">
            <children>

                <!-- Titolo annuncio -->
                <Label fx:id="titoloLabel" style="-fx-text-fill: #2b5797;" text="Titolo Annuncio">
                    <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                    </font>
                </Label>

                <!-- Foto -->
                <Region fx:id="fotoPlaceholder" prefHeight="180.0" prefWidth="760.0"
                        style="-fx-background-color: #b3d9ff; -fx-background-radius: 10;" />

                <!-- Info principali -->
                <VBox alignment="CENTER_LEFT" prefWidth="760.0" spacing="10.0">
                    <children>

                        <!-- Locatore e pulsante profilo -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0" prefWidth="760.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Locatore:" />
                                <Label fx:id="locatoreLabel" text="Mario Rossi" />
                                <Region HBox.hgrow="ALWAYS"/>
                                <Button fx:id="profiloLocatoreButton"
                                        style="-fx-background-color: #cce6ff; -fx-text-fill: #2b5797;
                                               -fx-font-weight: bold; -fx-background-radius: 8;"
                                        text="Vedi Profilo" />
                            </children>
                        </HBox>

                        <!-- Indirizzo -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0" prefWidth="760.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Indirizzo:" />
                                <Label fx:id="indirizzoLabel" text="Via Roma 12, Milano" />
                            </children>
                        </HBox>

                        <!-- Prezzo, valutazione e max ospiti -->
                        <HBox alignment="CENTER_LEFT" spacing="20.0" prefWidth="760.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Prezzo per notte:" />
                                <Label fx:id="prezzoLabel"
                                       style="-fx-text-fill: #2b5797; -fx-font-weight: bold;"
                                       text="€ 120.00" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label style="-fx-font-weight: bold;" text="Valutazione:" />
                                <Label fx:id="stelleLabel"
                                       style="-fx-text-fill: #f1c40f;"
                                       text="★★★★☆" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label style="-fx-font-weight: bold;" text="Ospiti max:" />
                                <Label fx:id="ospitiLabel" text="4" />
                            </children>
                        </HBox>

                        <!-- Servizi -->
                        <VBox spacing="5.0" prefWidth="760.0">
                            <children>
                                <Label style="-fx-font-weight: bold;" text="Servizi:" />
                                <Label fx:id="serviziLabel"
                                       text="Wi-Fi, Parcheggio, Piscina"
                                       wrapText="true" />
                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- Descrizione -->
                <VBox alignment="CENTER_LEFT" spacing="5.0" prefWidth="760.0">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Descrizione:" />
                        <ScrollPane fitToWidth="true" prefHeight="120.0"
                                    style="-fx-background-color:transparent;">
                            <content>
                                <Label fx:id="descrizioneLabel"
                                       text="Questa è la descrizione dettagliata dell'annuncio. Qui puoi inserire più informazioni, come la dimensione dell'appartamento, le regole della casa, ecc."
                                       wrapText="true" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <!-- Pulsanti azione -->
                <HBox alignment="CENTER" spacing="20.0" prefWidth="760.0"
                      style="-fx-padding: 10 0 0 0;">
                    <children>
                        <Button fx:id="annullaButton"
                                onAction="#handleAnnulla"
                                style="-fx-background-color: #cce6ff; -fx-text-fill: #2b5797;
                                       -fx-font-weight: bold; -fx-background-radius: 8;
                                       -fx-pref-width: 120; -fx-pref-height: 35;"
                                text="Indietro" />
                        <Button fx:id="prenotaButton"
                                onAction="#handlePrenota"
                                style="-fx-background-color: #4da6ff; -fx-text-fill: white;
                                       -fx-font-weight: bold; -fx-background-radius: 8;
                                       -fx-pref-width: 120; -fx-pref-height: 35;"
                                text="Prenota" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
