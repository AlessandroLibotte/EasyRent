<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f4f7fb;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.view.viewgui.controllers.ProfiloViewController">

    <children>
        <!-- Card principale -->
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="20.0" prefHeight="560.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 12;                      -fx-border-radius: 12; -fx-border-color: #c6d9f1;                      -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 3);                      -fx-padding: 20;">
            <children>

                <!-- Titolo pagina -->
                <Label style="-fx-text-fill: #2b5797;" text="Profilo Utente">
                    <font>
                        <Font name="Segoe UI Bold" size="26.0" />
                    </font>
                </Label>

                <!-- Dati profilo -->
                <HBox alignment="CENTER_LEFT" prefWidth="760.0" spacing="30.0">
                    <children>
                        <!-- Foto profilo -->
                        <Region fx:id="fotoProfilo" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="120.0" prefWidth="120.0" style="-fx-background-color: #b3d9ff; -fx-background-radius: 60;" />

                        <!-- Dati utente -->
                        <VBox alignment="CENTER_LEFT" prefWidth="500.0" spacing="5.0">
                            <children>
                                <HBox fx:id="emailRow" alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="30.0" spacing="10.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Email:" />
                                        <Label fx:id="emailLabel" text="utente@example.com" />
                                    </children>
                                </HBox>
                                <HBox fx:id="nomeRow" alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="30.0" spacing="10.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Nome:" />
                                        <Label fx:id="nomeLabel" text="Mario" />
                                    </children>
                                </HBox>
                                <HBox fx:id="cognomeRow" alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="30.0" spacing="10.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Cognome:" />
                                        <Label fx:id="cognomeLabel" text="Rossi" />
                                    </children>
                                </HBox>
                                <HBox fx:id="telefonoRow" alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="30.0" spacing="10.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Telefono:" />
                                        <Label fx:id="telefonoLabel" text="+39 333 1234567" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Pulsante Modifica Dati accanto ai dati -->
                        <Button fx:id="modificaButton" onAction="#handleModifica" style="-fx-background-color: #4da6ff; -fx-text-fill: white;                                        -fx-font-weight: bold; -fx-background-radius: 8;                                        -fx-pref-width: 140; -fx-pref-height: 40;" text="Modifica Dati" />
                    </children>
                </HBox>

                <!-- Storico prenotazioni -->
                <VBox alignment="TOP_LEFT" prefWidth="760.0" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2b5797;" text="Storico Prenotazioni" />
                        <ScrollPane fitToWidth="true" prefHeight="280.0" style="-fx-background-color:transparent;">
                            <content>
                                <VBox fx:id="storicoPrenotazioniBox" spacing="12.0" style="-fx-padding: 10;">
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <!-- Pulsante Indietro -->
                <HBox alignment="CENTER" prefWidth="760.0" spacing="20.0">
                    <children>
                        <Button fx:id="indietroButton" onAction="#handleIndietro" style="-fx-background-color: #cce6ff; -fx-text-fill: #2b5797;                                        -fx-font-weight: bold; -fx-background-radius: 8;                                        -fx-pref-width: 140; -fx-pref-height: 35;" text="Indietro" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
